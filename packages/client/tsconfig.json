{
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2021",

		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true
	},

	"exclude": [
		"node_modules",
		"dist"
	]
}